<li class="item-comment" id="<%= dom_id(comment) %>">
  <div class="row">
    <div class="avatar col-md-3">
      <%= image_tag Settings.image, class: "img-responsive" %>
    </div>
    <div class="col-md-9 right-comment">
      <div class="row">
        <div class="info col-md-7">
          <%= link_to comment.user.name, comment.user %><%= t ".open" %><%= comment.user.email %><%= t ".close" %>
          <div class="comment-body">
            <%= comment.content %>
          </div>
        </div>
        <span class="time col-md-5">
          <%= t ".comment_at" %><%= time_ago_in_words(comment.created_at) %>
          <%= t ".ago" %>
        </span>
        <% if current_user == comment.user %>
          <span class="pull-right">
            <%= link_to document_comment_path(@document, comment),
              class: "btn-delete-comment", remote:true, method: :delete do %>
              <i class="fa fa-times"></i>
            <% end %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</li>
<hr>
