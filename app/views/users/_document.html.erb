<div id="doc-user" class="doc-user">
  <% @documents.each do |document|%>
    <div class="row document-user">
      <div class="col-md-10">
        <div class="row">
          <div class="col-md-3" id="image_document">
            <%= image_tag Settings.image, class: "img-responsive" %>
          </div>
          <div class="col-md-9">
            <% if document.checked? %>
              <h4>
                <%= link_to document.name, document_path(document) %>
              </h4>
            <% else %>
              <h4><%= document.name %></h4>
            <% end %>
            <p>
              <i class="fa fa-tag">
                <span>
                  <%= link_to document.category.name, category_path(document.category) if document.category.present? %>
                </span>
                <span class="time">
                  <%= document.created_at.strftime(Settings.format_date) %>
                </span>
                <span class="status">
                  <%= t ".status" %>
                  <% if document.checked? %>
                    <span class="document-check">
                      <i class="fa fa-check-circle-o"></i>
                    </span>
                  <% elsif document.waiting? %>
                    <span class="document-pause">
                      <i class="fa fa-pause"></i>
                    </span>
                  <% else %>
                    <span class="document-ban">
                      <i class="fa fa-ban"></i>
                    </span>
                  <% end %>
                </span>
              </i>
            </p>
            <h5><%= t ".short_description" %></h5>
            <p><%= document.description %></p>
            <p>
              <% load_categories.each do |category| %>
                <i class="fa fa-tags"></i>
                <span><%= link_to category.name, category_path(category) %></span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <% if document.user == current_user %>

          <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Share with</button>
          <!-- Modal -->
            <div id="myModal" class="modal" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">List User</h4>
                  </div>
              <!--     <div class="modal-body">
                      <select id="e1">
                       <option value="AL">Alabama</option>
                        <option value="WY">Wyoming</option>
                       </select>
                  </div> -->
                  <%= @users.each do |user| %>
                    <%= form_for user do |f| %>
                      <% byebug %>
                      <%= f.label :user_name %>
                      <%= f.collection_select :id, @users, :id, :name, include_blank: true %>
                    <% end %>
                    <% end %>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>

              </div>
            </div>
          <!-- end -->


          <%= link_to document_path(document), method: :delete,
            class: "btn btn-default", data: {confirm: t(".delete_confirm")} do %>
            <span class="fa fa-trash-o"></span>
          <% end %>
        <% end %>
      </div>
    </div>
    <hr class="hr">
  <% end %>
  <%= paginate @documents %>
</div>
