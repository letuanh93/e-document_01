<nav class="hea navbar navbar-default top navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse"
        data-target=".navbar-ex1-collapse">
        <span class="sr-only"><%= t ".toggle_navigation" %></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>">
        <p class="logo_f"><%= t ".framgia" %></p>
      </a>
      <ul class="nav navbar-nav">
        <li class="dropdown navc">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t(".categories") %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% load_categories.each do |category| %>
              <li><%= link_to category.name, "#" %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="navc">
          <%= link_to t(".upload"),
            new_document_path, class: "fa fa-upload" %>
        </li>
        <li class="navc">
          <%= link_to t(".users"), users_path, class: "fa fa-users" %>
        </li>
        <% if user_signed_in? %>
          <li class="dropdown navc">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user-circle"></i>
              <%= t(".account") %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to "notification", "#" %>
              </li>
              <li>
                <%= link_to t(".messenger"), chatrooms_path %>
              </li>
              <li><%= link_to t(".profile"), "#" %></li>
              <li>
                <%= link_to t(".settings"),
                  edit_user_registration_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"),
                  destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
          <li class="nav-item btn-group"
            data-behavior="notifications"
            data-notifications="<%= render template: 'notifications/index',
            formats: [:json] %>">
            <a class="dropdown-toggle nav-link" data-behavior="notifications-link"
              id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true"
              aria-expanded="false">
              <%= fa_icon "bell" %> <span data-behavior="unread-count"></span>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu1"
              data-behavior="notification-items">
            </div>
