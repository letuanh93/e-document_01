          <ul class="dropdown-menu">
            <li class="<%= active_class_locale :en %>">
              <%= link_to locale: :en do %>
                <span class = "fa fa-globe"></span>
                <%= t "eng" %>
              <% end %>
            </li>
            <li class="<%= active_class_locale :vn %>">
              <%= link_to locale: :vn do %>
                <span class = "fa fa-th-large"></span>
                <%= t "viet" %>
              <% end %>
            </li>
          </ul>
        </li>
